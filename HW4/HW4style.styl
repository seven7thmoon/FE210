$color-1 = rgba(0, 0, 0, 0.5)
$color-2 = rgba(14, 13, 13, 0.938)
$color-3 = rgba(0, 0, 0, 0.6)

body
    background url(bg-default.jpg) center
    background-attachment fixed
    margin 0

.container
    background $color-1
    min-height 100vh
    padding-top 30px

.row
    width 1000px
    margin 0 auto

.col
    width 300px
    display inline-block
    margin 15px
    box-shadow none
    filter brightness(1)
    transition 1s box-shadow ease 0s, 1s filter ease 0s

    &:hover
        box-shadow 10px 10px 5px 5px $color-2
        filter brightness(1.5)

.preview
    img
        width 100%

.bottom
    background $color-3
    padding 10px
    position relative

.avata
    width 50px
    height 50px
    overflow hidden
    border-radius 50%

    img
        width 100%

.intro
    position absolute
    top 16px
    left 90px
    color white

.channel_name
    margin-bottom 10px
